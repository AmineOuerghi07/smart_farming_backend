{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/smart-farming-api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/smart-farming-api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/smart-farming-api-gateway",
  "projects": {
    "smart-farming-api-gateway": {
      "type": "application",
      "root": "apps/smart-farming-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/smart-farming-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/smart-farming-api-gateway/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "inventory": {
      "type": "application",
      "root": "apps/inventory",
      "entryFile": "main",
      "sourceRoot": "apps/inventory/src",
      "compilerOptions": {
        "tsConfigPath": "apps/inventory/tsconfig.app.json"
      }
    },
    "stock": {
      "type": "application",
      "root": "apps/stock",
      "entryFile": "main",
      "sourceRoot": "apps/stock/src",
      "compilerOptions": {
        "tsConfigPath": "apps/stock/tsconfig.app.json"
      }
    },
    "facture": {
      "type": "application",
      "root": "apps/facture",
      "entryFile": "main",
      "sourceRoot": "apps/facture/src",
      "compilerOptions": {
        "tsConfigPath": "apps/facture/tsconfig.app.json"
      }
    }
  }
}